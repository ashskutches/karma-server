= render :partial => "/shared/header", :locals => { :title => "Buckets", :subtitle => "", :flash => flash }

#content
  - if ! @buckets.empty?
    %h4= link_to "Create New Bucket", new_bucket_path
    %table
      %tr
        %th Bucket
        %th{ :colspan => 2 } Actions
      - @buckets.each do |bucket| 
        %tr
          %td= link_to bucket.permalink, bucket
          %td= link_to "#{image_tag 'edit.png'}Edit", edit_bucket_path(bucket), :class => "button"
          %td= link_to "#{image_tag 'delete.png'}Destroy", bucket, :confirm => "Are you sure?", :method => :delete, :title => "Destroy #{bucket.permalink} Bucket", :class => "button"
  - else
    = link_to "There are no buckets, click here to create the first one.", new_bucket_path
    