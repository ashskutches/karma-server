= render :partial => "/shared/header", :locals => { :title => "Edit User", :subtitle => changed_permalink(@user), :flash => flash }

- form_for @user, :url => user_path(:permalink => changed_permalink(@user)) do |f| 
  = render :partial => "form", :locals => { :f => f }
  
  %button{:type => "submit", :name => "commit", :value => "Update", :class => 'button positive'} Update User
  = link_to "Cancel", :back, :class => "button"
  