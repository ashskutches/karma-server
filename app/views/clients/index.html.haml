%h1 Clients

%table#clients
  %thead
    %tr
      %th Hostname
      %th Actions
  %tbody
    - for client in @clients
      %tr
        %td= link_to client.hostname, client
        %td
          = link_to 'edit', edit_client_path(client)
          = link_to 'delete', client, :method => :delete, :confirm => "Are you sure you want to permanently delete access for #{client.hostname}?"

= link_to 'new client', new_client_path
